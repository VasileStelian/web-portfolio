---
const projects = [
  {
    title: 'SignalForge.ro',
    subtitle: 'Astro + Tailwind',
    description: 'Fast production website with island architecture and CI/CD.',
    live: 'https://signal-forge-ro.vercel.app',
    repo: 'https://github.com/VasileStelian/SignalForge.ro'
  },
  {
    title: 'Vite React Drive',
    subtitle: 'React + Vite',
    description: 'Reusable components, hooks, deployed via Vercel.',
    live: 'https://vite-react-drive.vercel.app',
    repo: 'https://github.com/VasileStelian/vite-react-drive'
  },
  {
    title: 'Driving School',
    subtitle: 'React + Tailwind',
    description: 'Responsive interface built with components and hooks.',
    live: null,
    repo: null
  },
  {
    title: 'Matrix/Element Deployment',
    subtitle: 'Docker + Linux',
    description: 'Self-hosted communication system deployed via Docker.',
    live: null,
    repo: null
  },
  {
    title: 'Laravel SEO Rewrite',
    subtitle: 'Laravel + PHP',
    description: 'SSR-focused rewrite attempt using Laravel.',
    live: null,
    repo: null
  }
];
---

<section id="projects" class="py-20 px-4 bg-white">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-12 text-center">
      Projects
    </h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project) => (
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-xl transition-all duration-300 hover:-translate-y-2 group">
          <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-primary transition-colors duration-300">
            {project.title}
          </h3>
          <p class="text-sm text-primary font-medium mb-3">{project.subtitle}</p>
          <p class="text-gray-600 mb-4 leading-relaxed">{project.description}</p>
          <div class="flex gap-3">
            {project.live && (
              <a
                href={project.live}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 bg-primary text-white text-sm rounded-lg hover:bg-primary-dark transition-colors duration-300"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                Live
              </a>
            )}
            {project.repo && (
              <a
                href={project.repo}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-4 py-2 border-2 border-gray-300 text-gray-700 text-sm rounded-lg hover:border-primary hover:text-primary transition-colors duration-300"
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                Code
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
