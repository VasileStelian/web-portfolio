---
const skillCategories = [
  {
    title: 'Languages',
    skills: [
      'JavaScript (ES6+)',
      'TypeScript (learning)',
      'PHP (beginner)',
      'HTML5',
      'CSS3'
    ]
  },
  {
    title: 'Frameworks & Libraries',
    skills: [
      'React',
      'Astro',
      'TailwindCSS',
      'Vite',
      'Laravel (beginner)',
      'NEXT.js (learning)'
    ]
  },
  {
    title: 'Tools',
    skills: [
      'Git',
      'GitHub',
      'Vercel',
      'Node.js',
      'Docker',
      'Bash (basic)',
      'PowerShell',
      'WinRM Automation',
      'DNS Management',
      'SUPABASE DB',
      'Stripe'
    ]
  },
  {
    title: 'Infrastructure',
    skills: [
      'Linux (Ubuntu/Debian)',
      'Windows Server',
      'Active Directory',
      'Networking (fundamentals)',
      'CI/CD (basic)'
    ]
  }
];
---

<section id="skills" class="py-20 px-4 bg-gradient-to-b from-white to-blue-50">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-12 text-center">
      Skills
    </h2>
    <div class="grid md:grid-cols-3 gap-6">
      {skillCategories.map((category) => (
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          <h3 class="text-xl font-bold text-primary mb-4">{category.title}</h3>
          <ul class="space-y-2">
            {category.skills.map((skill) => (
              <li class="text-gray-700 flex items-center">
                <span class="w-2 h-2 bg-primary rounded-full mr-3"></span>
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
